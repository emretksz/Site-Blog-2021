@section Script{
    <script>
        $('.comment-reply').click(function () {
            var commentId = $(this).parent().children().attr('id');
            var nameSurname = $(this).parent().children('#' + commentId).text();
            $('#comment-guest-name').html(nameSurname);
            $('#comment-guest-name').removeAttr('hidden');
            $('#comment-guest-id').html(commentId);
            $('.comment-helper').removeAttr('hidden');
        })
        $('#clear-comment-guest').click(function () {
            $('#comment-guest-name').html('');
            $('#comment-guest-name').attr('hidden', 'hidden');
            $('#comment-guest-id').html('');
            $('.comment-helper').attr('hidden','hidden');
        })
    </script>
    <script>
        $('#comment-btn').click(function () {
            var blogId = $('#BlogId').val();
            var name = $('#comment-name').val() +' '+ $('#comment-surname').val();
            var message = $('#comment-message').val();
            var commentId = $('#comment-guest-id').text();
            $.ajax({
                url: '/Home/BlogComments',
                method: 'POST',
                async: false,
                data: { blogId, name, message, commentId },
                success: function (data) {
                    $('#comments-refresh').html(data);
                },
                error: function (data) {
                    alert("Bir Hata Oluştu!");
                }

            })
            
            $.ajax({
                url: '/home/CommentCounts',
                method: 'GET',
                async: false,
                data: { blogId },
                success: function (data) {
                    $('.comments-count').html(data + ' ' + 'Yorum');
                },
                error: function (data) {
                    alert('Bir Sorun Oluştu!');
                }
            })
        })
    </script>
